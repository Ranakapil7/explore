    <StackLayout row="1" class="p-4">
        <Label text="{{ title }}" class="text-xl font-bold" />
        <Label text="{{ description }}" textWrap="true" class="text-gray-600 my-2" />
        <GridLayout columns="auto, *, auto" class="mt-2">
            <Label text="{{ location.address }}" col="0" class="text-sm text-gray-500" />
            <StackLayout col="2" orientation="horizontal">
                <Label text="{{ rating }}" class="text-sm font-bold" />
